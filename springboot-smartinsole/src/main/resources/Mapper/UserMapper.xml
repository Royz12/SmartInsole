<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduationdesign.springbootsmartinsole.mapper.UserMapper">
    <insert id="insert">
        insert into user(user_name,password,phonenumber,role_type,profile_picture)
        values (#{user_name},#{password},#{phonenumber},#{role_type},#{profile_picture})
    </insert>

    <select id="login" resultType="com.graduationdesign.springbootsmartinsole.entity.User">
        select * from user
        where user_name= #{user_name} and phonenumber= #{phonenumber} and password= #{password}
    </select>

</mapper>
